<%- include ./partials/header.ejs %>
<%- include ./partials/sidebar.ejs %>
<div id="colorlib-main">
    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container px-md-0">
            <div class="row d-flex no-gutters" id="wrapper-items">
            </div>
            <div class="row d-flex">
                <div class="col-md-12 bg-danger" style="text-align:center;position: relative;height: 250px;background-image: url('<%= photo.thumbnail %>');background-repeat: no-repeat;background-size: cover;background-position: center;">
                    <div class="opacity" style="position: absolute;background-color: rgba(0,0,0,0.7);left: 0;z-index: 2;width: 100%;height: 100%;"></div>
                    <div class="container text-center" style="position: absolute;z-index: 5;top: 20%;left: 0;">
                        <h2 style="font-weight: bold;"><%= photo.titleName %></h2>
                        <hr style="width: 20%;border-width: 5px; border-color: #fff;">
                        <p style="max-width: 500px;margin: auto;color: gray;"><%= photo.desc %></p>
                    </div>
                </div>
                <div class="col-md-12 my-2 text-left ml-3">
                    <h3 class="text-uppercase"><%= photo.category %></h2>
                </div>
                <div class="row py-3">
                    <% for(var i=0; i < photo.photo.length; i++){ %>
                        <div class="col-md-4">
                            <a href="<%= photo.photo[i].image %>" class="img image-popup d-flex align-items-center justify-content-center" style="background-image: url('<%= photo.photo[i].image %>');height: 250px;width: 380px;">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <span class="fa fa-expand"></span>
                                </div>
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
</div><!-- END COLORLIB-MAIN -->

<%- include ./partials/footer.ejs %>