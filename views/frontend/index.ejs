<%- include ./partials/header.ejs %>
<%- include ./partials/sidebar.ejs %>
<div id="colorlib-main">
    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container px-md-0">
            <div class="row d-flex no-gutters" id="wrapper-items">
                <% for(var i=0; i < photos.length; i++){ %>
                    <div class="col-md-12 portfolio-wrap">
                        <div class="row no-gutters align-items-center">
                            <% if(i % 2 == 0) { %>
                                <a href="<%= photos[i].thumbnail %>" class="col-md-6 order-md-last img image-popup js-fullheight d-flex align-items-center justify-content-center" style="background-image: url('<%= photos[i].thumbnail %>');">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <span class="fa fa-expand"></span>
                                    </div>
                                </a>
                            <% } else { %>
                                <a href="<%= photos[i].thumbnail %>" class="col-md-6 img image-popup js-fullheight d-flex align-items-center justify-content-center" style="background-image: url('<%= photos[i].thumbnail %>');">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <span class="fa fa-expand"></span>
                                    </div>
                                </a>
                            <% } %>
                            <div class="col-md-6">
                                <div class="text pt-5 pl-0 px-lg-5 pl-md-4 ftco-animate">
                                    <div class="px-4 px-lg-4">
                                        <div class="desc text-md-right">
                                            <div class="top">
                                                <span class="subheading"><%= photos[i].category %></span>
                                                <h2 class="mb-4"><a href="/gallery/<%= photos[i].slug %>"><%= photos[i].titleName %></a></h2>
                                            </div>
                                            <div class="absolute">
                                                <p><%= photos[i].desc %></p>
                                            </div>
                                            <p><a href="/gallery/<%= photos[i].slug %>" class="custom-btn">View Portfolio</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            <!-- <div class="row d-flex">
                <div class="col-md-12">
                    <button type="button" onclick="loadMore()" id="btn-loadmore" class="btn-custom-load d-block w-100 text-center py-4">Load more <span class="fa fa-refresh"></span></a>
                </div>
            </div> -->
        </div>
    </section>
</div><!-- END COLORLIB-MAIN -->

<%- include ./partials/footer.ejs %>